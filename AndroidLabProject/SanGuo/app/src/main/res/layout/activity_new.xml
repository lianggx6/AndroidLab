<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:baselineAligned="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="700dp"
        >

        <ImageView
            android:id="@+id/new_human_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitStart"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/new_save"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            app:srcCompat="@drawable/new_save" />

        <ImageView
            android:id="@+id/new_cancle"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/new_cancle" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/new_buttom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-420dp"
        android:background="@drawable/infoweiback"
        app:layout_constraintTop_toTopOf="@id/R1">


        <TextView
            android:id="@+id/new_middle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="点此更换图片"
            android:textSize="40sp"
            android:gravity="center_horizontal"
            android:textColor="@color/colorWhite"
            android:background="@drawable/new_middle_image">

        </TextView>

        <ImageView
            android:id="@+id/new_name"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/new_middle"
            app:srcCompat="@drawable/new_name" />

        <ImageView
            android:id="@+id/new_nation"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@+id/new_jiguan_image"
            android:layout_toEndOf="@+id/nian2"
            app:srcCompat="@drawable/new_nation" />

        <TextView
            android:id="@+id/new_shengzu_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/new_name"
            android:background="@drawable/shengzu" />

        <TextView
            android:id="@+id/new_jiguan_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@+id/new_shengping_image"
            android:layout_toEndOf="@+id/nian2"
            android:background="@drawable/jiguan" />

        <TextView
            android:id="@+id/new_shengping_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/new_shengzu_image"
            android:background="@drawable/shengping" />

        <EditText
            android:id="@+id/new_shengping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/new_shengping_image"
            android:layout_below="@+id/new_jiguan_image"
            android:padding="10dp"
            android:hint="请输入生平事迹"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/new_name_edit"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/new_middle"
            android:layout_toEndOf="@+id/new_name"
            android:ems="6"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:hint="请输入姓名" />

        <EditText
            android:id="@+id/new_nation_edit"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/new_middle"
            android:layout_toEndOf="@+id/new_nation"
            android:ems="7"
            android:hint="请输入势力"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/new_jiguan_edit"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/new_nation"
            android:layout_toEndOf="@+id/new_jiguan_image"
            android:ems="7"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:hint="请输入籍贯" />

        <EditText
            android:id="@+id/new_birth_edit"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/new_nation"
            android:layout_toEndOf="@+id/new_shengzu_image"
            android:ems="2"
            android:textSize="18sp"
            android:textColor="@color/colorWhite" />


        <EditText
            android:id="@+id/new_dead_edit"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/new_nation"
            android:layout_toEndOf="@+id/nian1"
            android:ems="2"
            android:textSize="18sp"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/nian1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/new_name"
            android:layout_toEndOf="@+id/new_birth_edit"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:text="年—" />

        <TextView
            android:id="@+id/nian2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/new_name"
            android:layout_toEndOf="@+id/new_dead_edit"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:text="年" />


    </RelativeLayout>

</LinearLayout>