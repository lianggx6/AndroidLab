<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:descendantFocusability="blocksDescendants"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/shoes"
        app:riv_corner_radius="30dp"
        android:id="@+id/last_item_touxiang" />

    <TextView
        android:id="@+id/last_item_nicheng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/last_item_touxiang"
        android:layout_marginStart="10dp"
        android:text="眉清目秀" />

    <TextView
        android:id="@+id/last_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_alignBottom="@+id/last_item_touxiang"
        android:layout_toEndOf="@+id/last_item_touxiang"
        android:layout_marginStart="15dp"
        android:text="6小时前" />

    <TextView
        android:id="@+id/last_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff0000"
        android:textSize="18sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="100" />

    <TextView
        android:id="@+id/last_item_rmb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff0000"
        android:textSize="18sp"
        android:layout_alignTop="@+id/last_item_price"
        android:layout_toStartOf="@+id/last_item_price"
        android:text="RMB: " />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/latest_item_recyclerView"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/last_item_touxiang" />

    <TextView
        android:id="@+id/latest_item_miaoshu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="15sp"
        android:lineSpacingExtra="5dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:layout_alignStart="@+id/latest_item_recyclerView"
        android:layout_below="@+id/latest_item_recyclerView"
        android:text="之前双十一买的，用不上，便宜些出，有意私聊，价格可刀，多买多增,快来买，快来买，快来买快来买快来买吧多买多增,快来买，快来买，快来买快来买快来买吧多买多增,快来买，快来买，快来买快来买快来买吧" />

</RelativeLayout>