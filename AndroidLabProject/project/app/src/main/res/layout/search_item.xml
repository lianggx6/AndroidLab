<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/search_item_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/foods" />

    <TextView
        android:id="@+id/search_item_inform"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:maxLines="2"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_toEndOf="@+id/search_item_image"
        android:text="之前双十一买的，用不上，便宜些出，有意私聊，价格可刀，多买多增,快来买，快来买，快来买快来买快来买吧多买多增,快来买，快来买，快来买快来买快来买吧多买多增,快来买，快来买，快来买快来买快来买吧" />

    <TextView
        android:id="@+id/search_item_rmb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_item_inform"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/search_item_image"
        android:text="RMB: "
        android:textColor="#ff0000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/search_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/search_item_rmb"
        android:layout_below="@+id/search_item_rmb"
        android:layout_marginTop="5dp"
        android:text="6小时前"
        android:textSize="10sp" />


</RelativeLayout>